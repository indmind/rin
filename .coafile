[all]
files = **.js, **.json, **.css, **.yml, **.html, .eslintrc
ignore = node_modules/**, lib/**, tests/__data__/**, package-lock.json
max_line_length = 80
use_spaces = True

[all.whitespace]
bears = SpaceConsistencyBear
default_actions = *: ApplyPatchAction

[all.linelength]
ignore += package.json
bears = LineLengthBear

[js]
files = src/**/*.js
bears = ESLintBear
eslint_config = .eslintrc
default_actions = *: ApplyPatchAction

[all.json]
files = *.json
bears = JSONFormatBear
indent_size = 4
default_actions = *: ApplyPatchAction

[yaml]
files = *.yml, .eslintrc
bears = YAMLLintBear
